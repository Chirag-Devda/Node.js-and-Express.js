<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Note Book</title>
    <script src="https://cdn.tailwindcss.com"></script>
  </head>
  <body>
    <div class="main w-full min-h-screen bg-zinc-900">
      <div class="form text-white p-10">
        <form action="/create" method="post">
          <input
            name="title"
            class="block w-full mt-3 rounded-md p-2 bg-zinc-800 text-white outline-none"
            type="text"
            placeholder="Enter your title"
          />
          <textarea
            name="details"
            class="description resize-none block w-full mt-3 rounded-md p-2 bg-zinc-800 text-white outline-none"
            placeholder="Enter your Details here"
          ></textarea>
          <input
            class="px-3 py-1 mt-3 cursor-pointer bg-blue-500 rounded-md"
            type="submit"
            value="Submit"
          />
        </form>
      </div>
      <div class="tasks flex gap-4 flex-wrap p-10">
        <% if (files.length > 0 ) { %> <% files.forEach(val => {%>
        <div class="task min-w-72 px-3 py-2 bg-zinc-800 text-white rounded-md">
          <h1 class="text-2xl"><%= val %></h1>
          <div>
            <a class="text-blue-500 inline-block mt-1" href="/files/<%= val %>"
              >Read more.</a
            >
            <a href="/edit/<%= val %>">Edit</a>
          </div>
        </div>
        <% }); %> <% } else {%>
        <h1 class="text-white text-2xl">No task yet.</h1>
        <%} %>
      </div>
    </div>
  </body>
</html>
